{
  "name": "custom-fold-markers",
  "displayName": "Custom Fold Markers",
  "description": "Custom folding markers for VS Code",
  "version": "1.0.0",
  "publisher": "swaxx",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/swax/custom-fold-markers"
  },
  "keywords": [
    "folding",
    "fold",
    "markers",
    "regions",
    "code-folding",
    "collapse",
    "comments",
    "custom-regions",
    "code-markers"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "customFoldMarkers.toggleAll",
        "title": "Toggle All Custom Fold Markers"
      }
    ],
    "keybindings": [
      {
        "command": "customFoldMarkers.toggleAll",
        "key": "ctrl+k ctrl+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Custom Fold Markers",
      "properties": {
        "editor.customFoldMarkers": {
          "type": "object",
          "default": {
            "start": "//\\{",
            "end": "//\\}"
          },
          "description": "Define custom fold markers using regular expressions",
          "properties": {
            "start": {
              "type": "string",
              "description": "Regular expression pattern for fold start marker"
            },
            "end": {
              "type": "string",
              "description": "Regular expression pattern for fold end marker"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
